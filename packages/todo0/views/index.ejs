<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo0</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      background: #f7f7f7;
      color: #222;
    }
    .container {
      max-width: 420px;
      margin: 2em auto;
      background: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.07);
      padding: 2em 1.5em 1.5em 1.5em;
    }
    h1 {
      font-size: 1.7em;
      margin-bottom: 1em;
      color: #2d5be3;
    }
    form {
      margin-bottom: 1em;
    }
    input[type=text] {
      padding: 0.5em;
      border-radius: 4px;
      border: 1px solid #bbb;
      font-size: 1em;
      width: 60%;
      margin-right: 0.5em;
    }
    button {
      padding: 0.5em 1em;
      border-radius: 4px;
      border: none;
      background: #2d5be3;
      color: #fff;
      font-size: 1em;
      cursor: pointer;
      margin-right: 0.2em;
    }
    button:hover {
      background: #1741a6;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      margin-bottom: 0.7em;
      background: #f2f6ff;
      border-radius: 4px;
      padding: 0.6em 0.8em;
      display: flex;
      align-items: center;
      gap: 0.5em;
    }
    .done {
      text-decoration: line-through;
      color: #888;
      background: #e0e7ff;
    }
    .token-box {
      background: #f2f6ff;
      padding: 0.7em;
      border-radius: 4px;
      border: 1px solid #e0e7ff;
      margin-bottom: 1em;
      font-size: 0.97em;
      word-break: break-all;
    }
    .token-input {
      width: 100%;
      font-family: monospace;
      font-size: 0.97em;
      border: none;
      background: transparent;
      color: #2d5be3;
    }
    .copy-btn {
      background: #2d5be3;
      color: #fff;
      border: none;
      border-radius: 4px;
      padding: 0.3em 0.8em;
      font-size: 0.97em;
      cursor: pointer;
      margin-left: 0.5em;
    }
    .copy-btn:hover {
      background: #1741a6;
    }
    .logout-btn {
      width: 100%;
      background: #e34c4c;
      color: #fff;
      font-weight: 600;
      border: none;
      border-radius: 4px;
      padding: 0.7em 0;
      font-size: 1em;
      cursor: pointer;
      margin-top: 1.5em;
    }
    .logout-btn:hover {
      background: #b92d2d;
    }
  </style>
</head>
<body>
  <div class="container">
    <% if (!authenticated) { %>
      <h1>Todo0</h1>
      <form action="/login" method="GET">
        <button type="submit">Login</button>
      </form>
    <% } else { %>
      <h1>Todo0</h1>
      <form action="/todos" method="POST">
        <input type="text" name="title" placeholder="New todo" required />
        <button type="submit">Add</button>
      </form>
      <ul>
        <% todos.forEach(todo => { %>
          <li class="<%= todo.completed ? 'done' : '' %>">
            <span style="flex:1"><%= todo.title %></span>
            <form action="/todos/<%= todo.id %>/complete" method="POST" style="display:inline">
              <button type="submit"><%= todo.completed ? 'Undo' : 'Complete' %></button>
            </form>
            <form action="/todos/<%= todo.id %>/delete" method="POST" style="display:inline">
              <button type="submit">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
      <form action="/logout" method="POST">
        <button type="submit" class="logout-btn">Logout</button>
      </form>
    <% } %>
  </div>

  <script>
    function copyToken() {
      const tokenInput = document.getElementById('accessToken');
      tokenInput.select();
      document.execCommand('copy');
      alert('Access token copied to clipboard!');
    }
  </script>
</body>
</html>
